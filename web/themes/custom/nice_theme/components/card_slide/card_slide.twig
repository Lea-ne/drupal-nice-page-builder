{# Card Article Component #}
<div class="{{ class }}" {% if media %}style="background-image: url('{{ media }}');"{% endif %}>
  <div class="card__container">
    <div class="card__content">
      {% if title %}
        <h3 class="card__title">
          {{ title }}
        </h3>
      {% endif %}
      
      {% if text %}
        <div class="card__text">
          {{ text }}
        </div>
      {% endif %}
    </div>
  </div>
</div> 
